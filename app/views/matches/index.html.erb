<p id="notice"><%= notice %></p>

<h1>Partidos PollaGol</h1>

<table>
  <thead>
    <tr>
      <th>Fecha Partido</th>
      <th>Local</th>
      <th>Visitante</th>
      <th>Goles Local</th>
      <th>Goles Visitante</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.start_time %></td>
        <td><%= match.home_id %></td>
        <td><%= match.vis_id %></td>
        <td><%= match.home_goals %></td>
        <td><%= match.vis_goals %></td>
        <td><%= match.status %></td>
        <td><%= link_to 'Detalles', match %></td>
        <td><%= link_to 'Editar', edit_match_path(match) %></td>
        <td><%= link_to 'Eliminar', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ingresar Nuevo Partido', new_match_path %>
