<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Equipo Local  " %>
    <% options = options_from_collection_for_select(@all_teams, 'id', 'name', @all_teams.find(@match.home_id).id) %>
    <%= form.select :home_id,  options %>
  </div>
  
  <div class="field">
    <%= form.label "Equipo Visitante" %>
    <% options = options_from_collection_for_select(@all_teams, 'id', 'name', @all_teams.find(@match.vis_id).id) %>
    <%= form.select :vis_id,  options %>
  </div>

  <div class="field">
    <%= form.label :home_goals %>
    <%= form.number_field :home_goals %>
  </div>

  <div class="field">
    <%= form.label :vis_goals %>
    <%= form.number_field :vis_goals %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status_enum, options_for_select(@enums.keys)%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
