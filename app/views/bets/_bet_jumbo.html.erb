<div class="col">
    <div class="card  border-secondary mb-3 ">
        <div class="card-header"> 
            <h5><%= match.dynamic_title_str %></h5> 
            Fecha <%= match.week_nr %>  -  <%= match.start_time.to_formatted_s(:short) %>
            
        </div>
        <div class="card-body col-12">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                    <th>Usuario</th>
                    <th>Goles Local</th>
                    <th>Goles Visita</th>
                    <th>Puntos</th>
                    <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% match.bets.each do |filtereds| %>
                    <tr>
                        <td><%= User.find(filtereds.user_id).email %></td>
                        <td><%= filtereds.home_goals %></td>
                        <td><%= filtereds.visitor_goals %></td>
                        <td><%= filtereds.points%></td>
                        <% if filtereds.user_id == current_user.id %>
                            <td><%= link_to 'Eliminar', filtereds, method: :delete%> </td>
                        <% else %>
                            <td>  </td>
                        <% end %>
                        
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
            
</div>

