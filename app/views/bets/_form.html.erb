<%= form_with(model: bet) do |form| %>
  <% if bet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bet.errors.count, "error") %> prohibited this bet from being saved:</h2>

      <ul>
        <% bet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.hidden_field :user_id , :value => current_user.id%>
  </div>

<% if @custom_params %>
  <div class="field">
    <%= form.hidden_field :match_id, :value => @custom_params[0]%>
  </div>
<% else %>
  <div class="field">
    <%= form.label :match_id %>
    <% options = options_from_collection_for_select(@matches, 'id', 'dropdown_data') %>
    <%= form.select :match_id,  options %>
  </div>
<% end %>
<div class="row">
  <div class="col-3">
    <div class="field">
      <% loc = @matches.find(@custom_params).home_away_names[0] %>
      <%= form.label "Goles #{loc}" %><br>
      <%= form.number_field :home_goals, class: "form-control mx-sm-3", placeholder: "Goles Local"  %>
    </div>
  </div>
  <div class="col-3">
    <div class="field">
    
    <% vis = @matches.find(@custom_params).home_away_names[1].capitalize %>
      <%= form.label "Goles #{vis}"%><br>
      <%= form.number_field :visitor_goals, class: "form-control mx-sm-3", placeholder: "Goles Visita" %>
    </div>
  </div>
  <br>
  <div class="actions">
    <br>
    <%= form.submit class: "btn btn-primary btn-block"%>
  </div>
<% end %>
